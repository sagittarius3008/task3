<%= render 'info', book: @book ,user: @user%>

<!--対象userが投稿したbookの表示-->
<div>
<% @books.each do |book| %>
  <div>
    <p>タイトル：
      <%= link_to book_path(book.id) do %>
        <%= book.title %>
      <% end %>
    </p>
    <p>感想：<%= book.body %></p>
    <p>投稿者：<%= book.user.name %></p>
    <p>投稿ユーザー画像：<%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %></p>
  </div>
<% end %>
</div>
<!--%= paginate @books %-->