<%= render 'books/books_validation', book: @book%>
<div class="col-md-3">
<!--ユーザー詳細-->
  <h3>User info</h3>
  <p><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %></p>
  <table class="table table-sm mb-0">
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </table>
  <%= link_to edit_user_path(user.id) ,class:"btn btn-primary btn-block btn-sm mb-1" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>

<!--投稿フォーム-->
<!--form_withモデルがBook.newを渡されるとcreateアクションを呼び出す-->
  <h4>New book</h4>
  <%= form_with model: book, local:true do |f| %>
  <h4>本のタイトル</h4>
  <%= f.text_field :title %>
  <h4>感想文</h4>
  <%= f.text_area :body %>
  <div><%= f.submit 'Create Book' %></div>
  <% end %>
</div>