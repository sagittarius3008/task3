<% @books.each do |book| %>
<% @users.each do |user| %>
<div>
  
  <p>本の題名：
    <%= link_to book_path(book.id) do %>
      <%= book.title %>
    <% end %>
  </p>
  <p><%= user.name %></p>
  <p>投稿ユーザー画像：<%= attachment_image_tag user, :profile_image, :fill, 80, 80, fallback: "no_image.jpg" %></p>
  <p>説明：<%= book.body %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</div>
<% end %>
<% end %>