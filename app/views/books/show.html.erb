<%= render 'users/info', book: @book ,user: @user%>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table table-sm">
    <tr>
      <td>
        <p>
          <%= link_to(user_path(@user))do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" ,size:'50x50'%>
          <p><%= @books.user.name %></p>
          <% end %>
        </p>

      </td>
      <td><p><%= link_to book_path(@books) do %><%= @books.title %><% end %></p></td>
      <td><p><%= @books.body %></p></td>
      <% if @books.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@books) ,class:"btn btn-primary btn-sm" %></td>
      <td><%= link_to "Destroy", book_path(@books), class:"btn btn-danger btn-sm", method: :delete %></td>
      <% end %>
    </tr>
  </table>
</div>