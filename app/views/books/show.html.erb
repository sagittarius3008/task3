<%= render 'users/info', book: @book ,user: @user%>

<div class="book-body">
  <h2>Book detail</p>
  <table>
    <tr>
      <td>
        <p>
          <!--link先変更-->
          <%= link_to(book_path(@books))do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
          <p><%= @books.user.name %></p>
          <% end %>
        </p>

      </td>
      <td><p><%= link_to book_path(@books) do %><%= @books.title %><% end %></p></td>
      <td><p><%= @books.body %></p></td>
      <% if @books.user == current_user %>
      <td><%= link_to "編集", edit_book_path(@books) %></td>
      <td><%= link_to "削除", book_path(@books), method: :delete %></td>
      <% end %>
    </tr>
  </table><
</div>